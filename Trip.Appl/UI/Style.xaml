                                                <Setter Property="Fill" Value="#231F20"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Grade}" Value="4">
                                                <Setter Property="Fill" Value="#231F20"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Grade}" Value="5">
                                                <Setter Property="Fill" Value="#231F20"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Rectangle.Style>
                            </Rectangle>
                            <Rectangle Margin="2 4 2 0"
                                       Width="15"
                                       Height="15">
                                <Rectangle.Style>
                                    <Style TargetType="Rectangle">
                                        <Style.Triggers>
